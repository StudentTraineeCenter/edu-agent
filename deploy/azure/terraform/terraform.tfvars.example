# ============================================================================
# Azure Authentication & Identity
# ============================================================================
azure_subscription_id = "your-azure-subscription-id"
azure_tenant_id       = "your-azure-tenant-id"

# ============================================================================
# Infrastructure Configuration
# ============================================================================
location     = "Sweden Central"
region_code  = "swc"
project_name = "edu-agent"
environment  = "dev"  # dev, staging, or prod

# ============================================================================
# Container Registry Configuration
# ============================================================================
acr_repository_api    = "edu-api"
acr_tag_api          = "latest"
acr_repository_worker = "edu-worker"
acr_tag_worker        = "latest"
acr_repository_web   = "edu-agent-web"
acr_tag_web          = "latest"

# ============================================================================
# Supabase Configuration
# ============================================================================
supabase_access_token     = "your-supabase-access-token"
supabase_organization_id   = "your-supabase-organization-id"
supabase_database_password = "your-supabase-database-password"
supabase_region           = "eu-north-1"
supabase_service_role_key = "your-supabase-service-role-key"  # Optional, can be set manually later
supabase_jwt_secret       = "your-supabase-jwt-secret"        # Optional, can be set manually later
supabase_anon_key         = "your-supabase-anon-key"          # Optional, can be set manually later

